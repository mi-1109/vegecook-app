<div style="height: 650px" class="d-flex align-items-center">
    <div class="bg-box-container bf-light mx-auto py-5 px-4 ">

      <div class="container">
        <div class="row">
          <div class="col-7"><h3 class='jp-font-classic'>管理者ログイン</h3></div>
          <div class="offset-1 col-4">
            <%= link_to "ゲストログイン（管理者）", admin_guest_sign_in_path, method: :post, class:'btn btn-guest-admin py-1' %>
          </div>
        </div>

        <div class="row mt-3">
          <div clas="col-md-5">
          <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
            <div class="form-group ml-2">
              <%= f.label :email, 'メールアドレス' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "40" %>
            </div>
            <div class="form-group mt-4 ml-2">
              <%= f.label :password, 'パスワード' %><br />
              <%= f.password_field :password, autocomplete: "current-password", size: "40" %>
            </div>
            <div class="form-group mt-5 ml-2">
              <%= f.submit "ログイン", class: 'btn btn-sm btn-secondary' %>
            </div>
          <% end %>
          </div>
        </div>
      </div>

  </div>
</div>

