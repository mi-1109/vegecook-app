<div class="container">
  <div class="row">
    <h3 class="admin-page-title mx-auto mt-5 py-2 pl-4">会員一覧</h3>
  </div>

  <div class="row">
    <div class="col-md-4 offset-md-8">
      <h6 class="text-right mr-5 jp-font">会員数：<%= @user_count %>名</h6>
    </div>
  </div>

  <div class="row">
    <table style="width: 80%" class="table table-borderless mx-auto">
      <% @users.each do |user| %>
        <tr class="mt-5 border-bottom">
          <td style="width: 10%">
            <%= link_to (attachment_image_tag user, :profile_image, :fill, 150, 150, format: 'jpeg', fallback: "no_profile_image.jpg", size:'60x60', class:'rounded-circle'), admin_user_path(user.id) %>
          </td>
          <td style="width: 35%">
            <u><%= link_to user.name, admin_user_path(user.id) %><br /></u>
            <p class="mt-2"><%= user.introduction %></p>
          </td>
          <td style="width: 15%" class="py-0 align-middle">
            <%= user.is_paid_to_sring %>
          </td>
          <td style="width: 8%" class="py-0 align-middle text-center">
            <% if user.is_deleted == false %>
              <p class="active_color"><%= user.is_deleted_to_sring %></p>
            <% else %>
              <p class="inactive_color"><%= user.is_deleted_to_sring %></p>
            <% end %>
          </td>
          <td style="width: 10%" class="py-0 align-middle text-center">
            <%= link_to "チャット", admin_chat_path(user), class:'btn btn-sm btn-outline-secondary' %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="row">
    <div class="mx-auto mt-4 mb-5">
    <%= paginate @users %>
    </div>
  </div>
</div>