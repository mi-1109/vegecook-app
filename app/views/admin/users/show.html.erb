<!---------------- 管理者：会員詳細 ------------------>

<div class="container">
  <div class="row">
    <h1 class="mx-auto">会員情報の変更</h1>
  </div>

  <div class="row">
    <div class="col-md-7">
      <p>ユーザー名</p>
      <p><%= @user.name %></p>

      <p>自己紹介</p>
      <p><%= @user.introduction %></p>

      <p>メールアドレス</p>
      <p><%= @user.email %></p>

      <p>加入プラン</p>
      <p><%= @user.is_paid_to_sring %></p>

      <p>会員ステータス</p>
      <p><%= @user.is_deleted_to_sring %></p>
    </div>
  </div>

  <div class="row">
    <p><%= link_to "編集する", edit_admin_user_path(@user.id) %></p>
  </div>

  <div class="row">
    <p><%= link_to "戻る", admin_users_path %></p>
  </div>

</div>

