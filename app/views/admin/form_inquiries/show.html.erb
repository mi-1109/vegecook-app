<div style="height: 680px", class="d-flex align-items-center">

  <div class="border mx-auto">
    <div class="text-right m-2">
      <%= form_with model: [:admin, @form_inquiry], method: :patch, local: true do |f| %>
        <%= f.select :response_status, FormInquiry.response_statuses.keys.map {|k| [I18n.t("enums.form_inquiry.response_status.#{k}"), k]} %>
        <%= f.submit "変更", class: 'btn btn-sm btn-warning py-0 text-white' %>
      <% end %>
    </div>

    <div class="container pt-4">
      <div class="row px-5">
        <h4 class="jp-font-classic text-center mx-auto pb-2">お問い合わせ内容</h4>
      </div>

      <div class="mt-4 d-flex">
        <p class="font-weight-bold mr-1">user：</p>
        <%= @user.name %>
      </div>

      <div class="mt-2 d-flex">
        <p class="font-weight-bold mr-1">email：</p>
        <%= @user.email %>
      </div>

      <div class="mt-4">
        <p class="font-weight-bold mb-1">問い合わせ内容：</p>
        <p style="height: 150px" class="p-2 border rounded"><%= @form_inquiry.content %></p>
      </div>
    </div>

    <div class="actions text-right mb-2 mr-2">
      <u><%= link_to "一覧に戻る", admin_form_inquiries_path %></u>
    </div>
  </div>
</div>
