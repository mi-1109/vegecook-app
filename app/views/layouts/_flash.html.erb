<!------------ フラッシュメッセージ ------------->

<% if flash[:notice] %>
  <p id="notice" class="pl-4 py-1"><i class="far fa-check-circle pr-2"></i><%= flash[:notice] %></p>
<% elsif flash[:alert] %>
  <p id="alert" class="pl-4 py-1"><i class="fas fa-exclamation-triangle pr-2"></i><%= flash[:alert] %></p>
<% end %>
