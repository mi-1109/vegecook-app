<div style="height: 80vh", class="d-flex align-items-center">
  <div style="width: 40%", class="login-bg mx-auto mb-4">

    <div style="width: 70%", class="pt-4 px-4">
      <div class="container">
        <h3 class="mt-2 jp-font">ユーザー情報の編集</h3>

        <div class="row ml-2">
          <%= form_with model: @user, local:true do |f| %>
            <div class="form-group mt-4">
              <%= f.label :profile_image, 'プロフィール写真', class:'text-secondary font-weight-bold mb-1' %><br />
              <%= f.attachment_field :profile_image %>
            </div>

            <div class="form-group mt-4">
              <%= f.label :name, 'ユーザー名', class:'text-secondary font-weight-bold mb-1' %><br />
              <%= f.text_field :name, class:'form-control', size: "40" %>
            </div>

            <div class="form-group mt-4">
              <%= f.label :introduction, '自己紹介', class:'text-secondary font-weight-bold mb-1' %><br />
              <%= f.text_area :introduction, class:'form-control', size: "40x3" %>
            </div>

            <div class="form-group mt-4">
              <%= f.label :email, 'メールアドレス', class:'text-secondary font-weight-bold mb-1' %><br />
              <%= f.text_field :email, class:'form-control', size: "40" %>
            </div>

            <div class="d-flex mt-4">
              <p class="font-weight-bold">加入中のプラン:</p>
              <p class="ml-3"><%= @user.is_paid_to_sring %></p>
            </div>

            <div class="form-group form-inline mt-2">
              <%= f.submit '変更', class: 'btn btn-sm btn-success px-3' %>
              <%= link_to "退会する", users_quit_confirm_path, class: 'btn btn-sm btn-danger ml-4' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>

