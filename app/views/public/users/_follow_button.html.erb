<!-------- フォロー・フォロー解除ボタンの部分テンプレート ---------->

<% if user_signed_in? && current_user != user %>
  <% if user.followed_by?(current_user) %>
    <%= link_to "フォロー中", user_remove_follow_path(user_id: user.id, page_user_id: page_user.id), method: :delete, remote: true, data: {confirm: "#{user.name}さんのフォローを解除しますか？"}, class:'btn btn-sm btn-info' %>
  <% else %>
    <%= link_to "フォロー", user_add_follow_path(user_id: user.id, page_user_id: page_user.id), method: :post, remote: true, class:'btn btn-sm btn-outline-info' %>
  <% end %>
<% end %>