<!-------- フォロー・フォロー解除ボタンの部分テンプレート ---------->

<% if current_user != user %>
  <% if user.followed_by?(current_user) %>
    <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, remote: true, data: {confirm: "#{user.name}さんのフォローを解除しますか？"}, class:'btn btn-sm btn-info' %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, class:'btn btn-sm btn-secondary' %>
  <% end %>
<% end %>