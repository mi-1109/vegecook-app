<!-----------マイページ（会員詳細）ヘッダー部分--------------->

<div class="row d-flex">
  <div class="col-md-2">
    <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: 'no_profile_image.jpg', size:'100x75' %>
  </div>

  <div class="col-md-4">
    <h3><%= user.name %></h3>
    <p><%= user.veg_type %></p>
    <p><%= user.introduction %></p>
  </div>

  <div class="col-md-3" id="follow_count">
    <%= render partial: 'follow_count', locals: { user: user } %>
  </div>

  <div class="col-md-3">
    <% if user.id == current_user.id %>
      <%= link_to "", edit_user_path(current_user.id), class: 'fas fa-user-cog fa-lg text-secondary' %><br/>
      <%= link_to "レシピ投稿", new_post_recipe_path, class: 'fas fa-edit btn btn-sm btn-success p-2' %>
    <% else %>
      <%= render partial: 'follow_button', locals: { user: user } %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <hr class="border-bottom"></hr>
  </div>
</div>