<!-----------マイページ（会員詳細）ヘッダー部分--------------->

<div class="row d-flex mt-5">
  <div class="col-md-2 text-right">
    <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: 'no_profile_image.jpg', size:'100x75' %>
  </div>

  <div class="col-md-4">
    <div class="d-flex">
      <h3><%= user.name %></h3>
      <p class="ml-3 pt-2 text-success"><%= user.veg_type %></p>
    </div>
    <p><%= user.introduction %></p>
  </div>

  <div id="follow_count" class="col-md-2 offset-md-2 mt-3">
    <%= render partial: 'follow_count', locals: { user: user } %>
  </div>

  <div class="col-md-2 text-center">
    <% if user_signed_in? && user.id == current_user.id %>
      <%= link_to "レシピ投稿", new_post_recipe_path, class: 'fas fa-edit btn btn-sm btn-success p-2' %>
      <%= link_to "", edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-sm fas fa-user-cog px-4 mt-3' %><br/>
    <% else %>
      <div id="header-follow-btn" class="mt-3 text-left">
        <%= render partial: 'follow_button', locals: { user: user, page_user: page_user } %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <hr class="border-bottom"></hr>
  </div>
</div>