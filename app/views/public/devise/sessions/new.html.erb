<div style="height: 650px" class="d-flex align-items-center">
  <div class="bg-box-container mt-5 p-3 mx-auto pt-2">

    <div class="pt-4 pl-4 pr-3">
      <div class="container">
        <div class="row">
          <div class="col-6"><h2 class="en-font-pop">LOG IN</h2></div>
          <div class="offset-1 col-5">
            <%= link_to "ゲストログイン（会員）", users_guest_sign_in_path, method: :post, class:'btn btn-guest-user py-1' %>
          </div>
        </div>

        <div class="row">
          <div class="col-12">
          <%= form_with model: @user, url: user_session_path, local: true do |f| %>
            <div class="form-group mt-4">
              <%= f.label :email, 'メールアドレス:' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "40" %>
            </div>

            <div class="form-group mt-4">
              <%= f.label :password, 'パスワード:' %><br />
              <%= f.password_field :password, autocomplete: "current-password", size: "40", class:'mr-3' %>
            </div>

            <div class="form-group mt-5">
              <%= f.submit "ログイン", class: 'btn btn-sm btn-color font-weight-bold' %>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
    <p class="text-right pr-3"><%= render "public/devise/shared/links" %></p>

  </div>
</div>




