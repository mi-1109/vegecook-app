$('#follower_<%= @follower.id %>').html('<%= j(render 'public/users/follow_list', user: @follower) %>');
$('.add-following').append('<tr id="following_<%= @following.id %>"><td><%= attachment_image_tag @following, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_profile_image.jpg", size:'80x60' %></td><td><%= link_to @following.name, user_path(@following.id) %></td><td><%= link_to "フォロー中", user_relationships_path(@following.id), method: :delete, remote: true, data: {confirm: "#{@following.name}さんのフォローを解除しますか？"}, class:'btn btn-sm btn-info' %></td></tr>');
$('#follow_count').html('<%= j(render 'public/users/follow_count', user: @user) %>');